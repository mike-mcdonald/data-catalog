{% embed 'block.html.twig' with {
  'block_classes': [
    'my-3',
    'border',
    'border-b',
    'rounded-sm',
    'border-gray-500',
  ],
  'heading_element': 'div',
  'title_classes': [
    'bg-gray-200',
    'px-2',
    'py-1',
    'font-semibold',
    'rounded-t-sm',
    'border-b',
    'border-gray-500',
  ],
  'content_classes': [
  ],
} %}
	{% block title %}
		{{ title_prefix }}
		{% if label %}
			<{{heading_element}}{{title_attributes.addClass(title_classes)}}>{{ label }}</{{heading_element}}>
		{% endif %}
		{{ title_suffix }}
	{% endblock %}
	{% block content %}
		<div{{content_attribute.addClass(content_classes)}}>
			{{ content }}
		</div>
	{% endblock %}
{% endembed %}
