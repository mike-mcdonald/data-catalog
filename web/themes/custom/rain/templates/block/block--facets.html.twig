{% embed 'block.html.twig' with {
  'block_classes': [
    'my-3',
  ],
  'heading_element': 'div',
  'title_classes': [
    'py-2',
    'font-thin',
    'font-semibold',
  ],
  'content_classes': [
  ],
} %}
	{% block title %}
		{{ title_prefix }}
		{% if label %}
			<{{heading_element}}{{title_attributes.addClass(title_classes)}}>{{ label }}</{{heading_element}}>
		{% endif %}
		{{ title_suffix }}
	{% endblock %}
	{% block content %}
		<div{{content_attribute.addClass(content_classes)}}>
			{{ content }}
		</div>
	{% endblock %}
{% endembed %}
