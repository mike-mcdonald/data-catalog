{% embed 'field.html.twig' with {
    'margin' : '2',
    'classes': [
      'block',
    ],
    'item_classes': [
      'px-2',
      'bg-purple-100',
      'border',
      'border-purple-900',
      'rounded-lg',
      'text-purple-900'
    ]
  } %}
	{% block content %}
		{% spaceless %}
			{%- for item in items if item.content|render|striptags|trim is not empty -%}
				<span{{item.attributes.addClass(item_classes)}}>
					{{ item.content }}
				</span>
			{%- endfor -%}
		{% endspaceless %}
	{% endblock %}
{% endembed %}
