{% embed 'field.html.twig' with {
    field_classes: [
      'my-2',
      'block',
    ],
    'item_classes': [
      'capitalize',
      'text-fog-800',
      'font-semibold',
      'italic',
    ]
  } %}
	{% block content %}
		{% spaceless %}
			{%- for item in items if item.content|render|striptags|trim is not empty -%}
				<span{{item.attributes.addClass(item_classes)}}>
					{{ item.content }}
				</span>
			{%- endfor -%}
		{% endspaceless %}
	{% endblock %}
{% endembed %}
