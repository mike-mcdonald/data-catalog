{% embed 'field.html.twig' with {
  'margin': 3,
  'item_classes': [
    'p-2',
    'bg-cyan-500',
    'text-white',
    'border',
    'border-cyan-800',
    'rounded',
    'flex',
    'items-center'
  ],
} %}
	{% spaceless %}
		{% block content %}
			{%- for item in items if item.content|render|striptags|trim is not empty -%}
				<a{{item.attributes.addClass(['border-0', 'flex'])}} href="mailto:{{ item.content['#title'] }}">
					<span{{ create_attribute().addClass(item_classes) }}>
            {% include active_theme_path() ~ '/icons/send.svg' %}
					  <span class="ml-2">{{ item.content['#title'] }}</span>
          </span>
				</a>
			{%- endfor -%}
		{% endblock %}
	{% endspaceless %}
{% endembed %}
