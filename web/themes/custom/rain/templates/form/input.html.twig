{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 * - required: Exists if this input is required
 *
 * @see template_preprocess_input()
 */
#}
{%
  set input_classes = input_classes|default([
    required ? 'bg-red-100' : 'bg-gray-100',
    'appearance-none',
    'block',
    'border',
    required ? 'border-red-600' : 'border-gray-500',
    'rounded',
    'w-full',
    'px-4',
    'py-3',
    'focus:outline-none',
    'transition',
    'ease-in-out',
    'duration-150',
    required ? 'focus:bg-red-100' : 'focus:bg-white',
    required ? 'focus:border-red-900' : 'focus:border-gray-900',
  ])
%}
{% spaceless %}
	<input{{attributes.addClass(input_classes)}}/>{{ children }}
{% endspaceless %}
