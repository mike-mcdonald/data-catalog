{#
/**
 * @file
 * Default theme implementation to display a one-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set layout_classes = layout_classes|default([
    'grid',
    'grid-cols-1',
    'gap-4',
  ])
%}
{%
  set region_classes = region_classes|default([])
%}
{% if content %}
  <div{{attributes.addClass(layout_classes).addClass(region_classes)}}>
    {{ content.content }}
  </div>
{% endif %}
